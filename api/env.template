# ==============================================
# InterviewAI Pro - Environment Variables
# Local Development Configuration
# ==============================================

# ----------------------------------
# Application Configuration
# ----------------------------------
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ----------------------------------
# Database Configuration
# ----------------------------------
MONGODB_URI=mongodb://admin:admin123@localhost:27017/interviewai?authSource=admin
MONGODB_DB_NAME=interviewai
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=admin123

# ----------------------------------
# Redis Configuration
# ----------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ----------------------------------
# JWT Configuration
# ----------------------------------
# Generate secure secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=dev-access-secret-key-minimum-32-characters-for-development-only-change-in-prod
JWT_REFRESH_SECRET=dev-refresh-secret-key-minimum-32-characters-for-development-only-change-in-prod
JWT_ACCESS_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# ----------------------------------
# OTP Configuration (Telegram Authentication)
# ----------------------------------
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# ----------------------------------
# Telegram Bot Configuration
# ----------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-from-botfather
TELEGRAM_BOT_USERNAME=YourBotUsername

# ----------------------------------
# OpenAI Configuration
# ----------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=

# ----------------------------------
# OpenRouter Configuration (Alternative to OpenAI)
# ----------------------------------
# IMPORTANT: OpenRouter uses ONE API key for ALL models (Sonnet-3, GPT-4, etc.)
# You don't need separate keys - just change the model name in OPENROUTER_MODEL
# 
# Auto-detected if API key starts with 'sk-or-v1-'
# Set OPENROUTER_ENABLED=true to force OpenRouter mode
OPENROUTER_ENABLED=false
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenRouter Model Selection (one key works for all models):
# - OpenAI: openai/gpt-4o-mini, openai/gpt-4o, openai/gpt-4-turbo-preview
# - Anthropic: anthropic/claude-3.5-sonnet, anthropic/claude-3-opus, anthropic/claude-3-haiku
# - Meta: meta-llama/llama-3-70b-instruct, meta-llama/llama-3-8b-instruct
# Note: GPT-5 doesn't exist - using GPT-4o-mini as production-ready alternative
OPENROUTER_MODEL=openai/gpt-4o-mini

# Optional: For OpenRouter rankings (helps with visibility)
OPENROUTER_HTTP_REFERER=
OPENROUTER_X_TITLE=

# ----------------------------------
# Local File Storage (Development)
# ----------------------------------
LOCAL_UPLOAD_PATH=./uploads
PUBLIC_URL=http://localhost:3000

# ----------------------------------
# Docker Admin Interfaces
# ----------------------------------
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin123
REDIS_COMMANDER_USERNAME=admin
REDIS_COMMANDER_PASSWORD=admin123

